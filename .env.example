# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=pandac
MYSQL_USER=app
MYSQL_PASSWORD=password

# Backend Configuration
SPRING_PROFILES_ACTIVE=docker
DATABASE_HOST=mysql
DATABASE_PORT=3306
DATABASE_NAME=pandac
DATABASE_USERNAME=app
DATABASE_PASSWORD=password
JPA_SHOW_URL=false
HIBERNATE_FORMAT_SQL=false

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8080
MYSQL_PORT=3306

# File Upload Configuration
FILE_MAX_SIZE=10MB
FILE_MAX_REQUEST_SIZE=10MB

# Stripe Configuration (Replace with your actual keys)
STRIPE_API_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE

# JWT Configuration (Replace with a secure secret)
JWT_SECRET=YOUR_SECURE_JWT_SECRET_KEY_HERE_MINIMUM_32_CHARS

# GitHub Configuration (Replace with your actual tokens)
GIT_TOKEN=github_pat_YOUR_GITHUB_TOKEN_HERE
GIT_USERNAME=pandaind
GIT_REPO_URL=https://github.com/pandaind/pandac-store-cdn.git
CDN_BASE_URL=https://cdn.jsdelivr.net/gh